<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastro Administrador (Empresa)"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>


        <EditText
            android:id="@+id/cadastro_nome_empresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:maxLength="30"
            android:hint="Nome da empresa"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/cadastro_cnpj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="CNPJ"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/cadastro_usuario_administrador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="UsuÃ¡rio"
            android:maxLength="10"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/cadastro_senha_administrador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:inputType="textPassword"
            android:hint="Senha"
            android:maxLength="8"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btn_cadastrar_administrador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:text="Cadastrar"
            />

    </LinearLayout>

</LinearLayout>